{
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "notify": true,
    "notifyMode": "always",
    //"verbose": true,
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageProvider": "v8",
    "moduleNameMapper": {
        "(.+)\\.js": "$1"
    },
    "globalSetup": "clava-js/jest/jestGlobalSetup.js",
    "globalTeardown": "clava-js/jest/jestGlobalTeardown.js",
    "setupFiles": ["clava-js/jest/setupFiles/sharedJavaModule.js"]
}
